<main class="rsvp--main">
  <div class="breadcrumb--container">
    <div class="breadcrumb">
      <% steps.each do |step| %>
        <span><%= link_to_if(past_step?(step), step.to_s.titleize, rsvp_path(step)) %></span>
      <% end %>
    </div>
  </div>


  <div class="rsvp--container">
    <%= yield %>
  </div>
</main>

